<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menus"
    tools:context=".HelpActivity"
    android:orientation="vertical">


    <TextView
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WHAT IS YOUR CONCERN?"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:fontFamily="@font/bitter_bold" />

    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button5"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/question2"/>

    <ImageButton
        android:layout_gravity="center_horizontal"
        android:id="@+id/button6"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/question3"/>

    <ImageButton
        android:layout_gravity="center_horizontal"
        android:id="@+id/button7"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/question4"/>

    <ImageButton
        android:layout_gravity="center_horizontal"
        android:id="@+id/button8"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/question5"/>

    <ImageButton
        android:layout_gravity="center_horizontal"
        android:id="@+id/button9"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/question1"/>


    <Button
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonback"
        android:text="BACK"
        android:textColor="@color/white" />

</LinearLayout>