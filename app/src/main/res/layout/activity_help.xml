<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menus"
    tools:context=".HelpActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/concern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WHAT IS YOUR CONCERN?"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:gravity="center"
        android:fontFamily="@font/bitter_bold"
        />

    <ImageButton
        android:id="@+id/button9"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:layout_below="@+id/concern"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/Question1" />

    <ImageButton
        android:id="@+id/button5"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:layout_below="@+id/button9"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/Question2" />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:layout_below="@+id/button5"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/Question3" />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:layout_below="@+id/button6"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/Question4" />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:layout_below="@+id/button7"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/Question5" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:layout_below="@+id/button8"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/Question_back" />

    </RelativeLayout>

</ScrollView>
</RelativeLayout>