<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menus"
    tools:context=".HelpActivity"
    android:orientation="vertical">


    <TextView
        android:textAllCaps="true"
        android:textAlignment=""
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     Click your concerns"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button5"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/zxing_transparent"
        android:text="I can't login using the Access Code"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button6"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/zxing_transparent"
        android:text="How I can add vehicle?"
        android:textColor="@color/black" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button7"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/zxing_transparent"
        android:text="How do I reset my access code/password"
        android:textColor="@color/black" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button8"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/zxing_transparent"
        android:text="QR pass failed to give proper information"
        android:textColor="@color/black" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button9"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/zxing_transparent"
        android:text="Does Fomics App Back Up All Data?"
        android:textColor="@color/black" />

    <Button
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="BACK"
        android:textColor="@color/white" />

</LinearLayout>