<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otherFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headerblue"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/bg_client_profile"
            android:fitsSystemWindows="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="client@gmail.com"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed-medium"/>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/myepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:src="@drawable/button_my_epass"/>

            <ImageButton
                android:id="@+id/clientchangepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/myepass"
                android:src="@drawable/button_change_pass"/>

            <ImageButton
                android:id="@+id/clientlogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/clientchangepass"
                android:src="@drawable/button_client_logs"/>

            <ImageButton
                android:id="@+id/client_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/clientlogs"
                android:src="@drawable/button_logout"
                android:layout_marginBottom="20dp"/>



        </RelativeLayout>


    </LinearLayout>

</FrameLayout>