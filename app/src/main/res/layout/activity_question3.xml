<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question3"
    android:orientation="vertical"
    android:background="@drawable/bg_menus">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qr-pass failed to give proper information"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>

    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_weight="1">

        <TextView
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:id="@+id/how_to_do"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="We're sorry this happened, You can tell the security personnel about this but you must provide ID to show or you can contact the Admin to resolve the problem" />

    </ScrollView>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/back2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="back"/>
    </LinearLayout>


</LinearLayout>